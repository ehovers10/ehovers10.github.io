	{% endfor %}
{% else %}
	{% if page.category %}
		<a href="/">home</a>
		{% if page.parent %}
			<a href="/{{page.parent | slugify}}/">{{page.parent}}</a>
		{% endif %}
		<p>{{page.subheading}}</p>
		{% for i in (0...num) %}
			<a href="/{{enav[i].parent}}/{{enav[i].subheading | slugify}}/{{enav[i].title | slugify}}/">{{enav[i].handle}}</a>
		{% endfor %}
	{% endif %}
{% endif %}
	
